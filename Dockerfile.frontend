# React frontend container
FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY src/ ./src/
COPY public/ ./public/
COPY index.html vite.config.ts tsconfig*.json postcss.config.js tailwind.config.js ./

# Expose Vite dev server port
EXPOSE 5173

# Run development server with host flag to allow external access
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
